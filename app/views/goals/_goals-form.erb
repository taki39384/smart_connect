<%= form_with(url: goals_path, method: :post, local: true, class: "goals-form") do |f| %>
  <table id="goals-table">
    <thead>
      <tr>
        <th>項目</th>
        <th>目標数</th>
        <th>獲得数</th>
        <th>達成率</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><input type="text" name="goal_name"></td>
        <td><input type="number" name="goal_number[]" /></td>
        <td><input type="number" name="achievement_number[]" /></td>
        <td><span class="achievement-rate">0%</span></td>
      </tr>
    </tbody>
  </table>
  <button type="button" id="add-goal">項目を追加</button>
  <button type="submit" id="add-storage">保存</button>
<% end %>