<%= form_with(model: @task, local: true) do |f| %>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"title" %>
  </div>
  <div class="field">
    <%= f.label :content, "コンタクト" %><br />
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :start_time, "日時" %><br />
    <%= f.datetime_select :start_time %>
  </div>
  <div class="actions">
    <%= f.submit "保存する", class: :form__btn %>
  </div>
<% end %>